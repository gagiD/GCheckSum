# Maintainer: gagiD GaguliÄ‡ Eldin <gagid@openmailbox.com>

packager=gagiD
pkgname=gchecksum
pkgver=0.1
pkgrel=1
arch=('i686')
pkgdesc="GUI frontend for system.util sums. C++ && Qt framework."
license=('GPL')
groups=('qt' 'qt5')
makedepends=('qt5-base')
depends=('qt5-base')
install='gchecksum.install'
source=("https://github.com/gagiD/GCheckSum/blob/master/pkg/${pkgname}-${pkgver}.tar.gz")
md5sums=('e6b5cfc32b148f9ffe63251d7f073431')

prepare() {
	cd $srcdir
	qmake-qt5 PREFIX=/usr
}

build() {
	cd $srcdir
	make
}

check() {
	cd $srcdir
	make -k check
}

package() {
	cd $srcdir
	make INSTALL_ROOT="${pkgdir}" install
}
